<div class="panel panel-default">
  <div class="panel-body panel-content">
    <div class="row">
      <table class="table adminUsersTable">
        <thead>
          <tr>
            <th>La Casa de</th>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <th><%= user.vendor.gsub("La Casa de", "") if user.vendor.present? %></th>
              <td><%= user.name %></td>
              <td><%= user.lastname %></td>
              <td class="a_actions">
                <%= link_to "Ver", admin_user_path(user.id) %> |
                <%= link_to "Editar", edit_admin_user_path(user.id) %> |
                <%= link_to 'Eliminar', admin_user_path(user.id), method: :delete, data: { confirm: '¿Estás seguro?' } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
